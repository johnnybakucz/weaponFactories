<%- include('header') -%>

<h1>Termék 
    <% if (typeof termek === 'undefined') { %>
        hozzáadása
    <% }else{ %>
        módosítása
    <% } %>
</h1>

<div class="form-container">
    <form method="POST">
        
        <label class="text-field-label" for="nev">Név</label>
        <input class="text-field" id="nev" name="nev" type="text" value="<%= (typeof termek === 'undefined') ? '' : termek.nev %>"/>
        <label class="text-field-label" for="tipus">Típus</label>
        <input class= "text-field" id="tipus" name="tipus" type="text" value="<%= (typeof termek === 'undefined') ? '' : termek.tipus %>"/>
        <label class="text-field-label" for="alkohol">Alkoholtartalom</label>
        <input class="text-field" id="alkohol" name="alkohol" type="text" value="<%= (typeof termek === 'undefined') ? '' : termek.alkohol %>"/>
        <label class="text-field-label" for="keseruseg">Keserűség</label>
        <input class="text-field" id="keseruseg" name="keseruseg" type="text" value="<%= (typeof termek === 'undefined') ? '' : termek.keseruseg %>"/>
        
        <div class="modify-buttons-container">
            <input class="modify-button" type="submit" value="Mentés"/>
            <a href="/termek/<%= fozde._id %>">Mégsem</a>
        </div>

    </form>
</div>

<%- include('footer') -%>

<%- include('header') %> 
<h1>Company
    <% if (typeof factory === 'undefined') { %>
        creation
    <% }else{ %>
        edit
    <% } %>
</h1>

<div class="form-container">
    <form method="POST" action="/weaponfactories">
        <label class="text-field-label" for="name">Name</label>
        <input class="text-field" id="name" type="text"
            value="<%= (typeof factory === 'undefined') ? '' : factory.name %>"/>
        <label class="text-field-label" for="country">Country</label>
        <input class="text-field" id="country" type="text"
            value="<%= (typeof factory === 'undefined') ? '' : factory.country %>"/>
        <label class="text-field-label" for="worth">Net worth</label>
        <input class="text-field" id="worth" type="text"
            value="<%= (typeof factory === 'undefined') ? '' : factory.worth %>"/>
        <label class="text-field-label" for="estabilished">Year of Est.</label>
        <input class="text-field" id="estabilished" type="text"
            value=""<%= (typeof factory === 'undefined') ? '' : factory.estabilished %>"/>
        <label class="text-field-label" for="num-models">Num. of Models</label>
        <input class="text-field" id="num-models" type="text"
            value=""<%= (typeof factory === 'undefined') ? '' : factory.noModels %>"/>
        <label class="text-field-label" for="active">Active?</label>
        <input class="text-field" id="active" type="checkbox"
            value="<%= (typeof factory === 'undefined') ? 'checked' : 'checked' %>"/>
        <input type="submit" class="modify-button" value="Save"/>
        <a class="modify-button" href="/weaponfactories">Cancel</a>
    </form>
</div>
